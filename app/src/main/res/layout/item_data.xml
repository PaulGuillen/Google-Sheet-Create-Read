<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:background="@color/white"
    app:cardCornerRadius="5dp"
    app:cardElevation="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/nombre_producto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/trtempus_sans"
                android:ellipsize="end"
                android:padding="5dp"
                android:singleLine="true"
                android:maxLines="1"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:text="Nombre Producto"
                android:textSize="17sp" />

            <TextView
                android:id="@+id/descripcion_producto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/trtempus_sans"
                android:ellipsize="end"
                android:padding="5dp"
                android:singleLine="true"
                android:maxLines="1"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:text="Descripcion Producto"
                android:textSize="17sp" />


            <TextView
                android:id="@+id/producto_venta"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/trtempus_sans"
                android:ellipsize="end"
                android:padding="5dp"
                android:singleLine="true"
                android:maxLines="1"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:text="Venta Producto"
                android:textSize="17sp" />


            <TextView
                android:id="@+id/producto_compra"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/trtempus_sans"
                android:ellipsize="end"
                android:padding="5dp"
                android:singleLine="true"
                android:maxLines="1"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:text="Compra Producto"
                android:textSize="17sp" />

            <TextView
                android:id="@+id/producto_tipo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/trtempus_sans"
                android:ellipsize="end"
                android:padding="5dp"
                android:singleLine="true"
                android:maxLines="1"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:text="Tipo Producto"
                android:textSize="17sp" />



            <TextView
                android:id="@+id/producto_rating"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/trtempus_sans"
                android:ellipsize="end"
                android:padding="5dp"
                android:singleLine="true"
                android:maxLines="1"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:text="Rating Producto"
                android:textSize="17sp" />


        </LinearLayout>


    </LinearLayout>

</androidx.cardview.widget.CardView>